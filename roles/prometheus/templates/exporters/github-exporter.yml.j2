{% extends "deployment-exporter.yml.j2" %}

{% if monitor.github.env.quota is defined %}
{% set quota_cpu = monitor.github.quota.cpu %}
{% set quota_mem = monitor.github.quota.mem %}
{% else %}
{% set quota_cpu = "50m" %}
{% set quota_mem = "50Mi" %}
{% endif %}

{% block env %}
            - name: ORGS
              value: "{{ monitor.github.env.orgs | default('') }}"
            - name: USERS
              value: "{{ monitor.github.env.users | default('') }}"
            - name: REPOS
              value: "{{ monitor.github.env.repos | default('') }}"
            - name: GITHUB_TOKEN
              value: "{{ monitor.github.env.token | default('') }}"
{% endblock %}

{% block quota %}
            limits:
              cpu: "{{ quota_cpu }}"
              memory: "{{ quota_mem }}"
            requests:
              cpu: "{{ quota_cpu }}"
              memory: "{{ quota_mem }}"
{% endblock %}